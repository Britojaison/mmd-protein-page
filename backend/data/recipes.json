    {
      "recipeName": "High Protein Greek Yogurt Bowl",
      "milkyMistProduct": "Milky Mist Greek Yogurt",
      "ingredients": [
        "200g Milky Mist Greek Yogurt",
        "1 banana, sliced",
        "2 tbsp almonds, chopped",
        "1 tbsp honey",
        "1 tbsp chia seeds"
      ],
      "steps": [
        "Pour Greek yogurt into a bowl",
        "Top with sliced banana",
        "Sprinkle chopped almonds and chia seeds",
        "Drizzle honey on top",
        "Serve immediately"
      ],
      "protein": 22
    },
    {
      "recipeName": "Skyr Protein Pancakes",
      "milkyMistProduct": "Milky Mist Skyr",
      "ingredients": [
        "150g Milky Mist Skyr",
        "2 eggs",
        "1/2 cup oats",
        "1 tsp baking powder",
        "Fresh berries for topping"
      ],
      "steps": [
        "Blend Skyr, eggs, oats, and baking powder until smooth",
        "Heat a non-stick pan over medium heat",
        "Pour batter to form pancakes",
        "Cook 2-3 minutes each side until golden",
        "Top with fresh berries and serve"
      ],
      "protein": 25
    },
    {
