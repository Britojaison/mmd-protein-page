      "milkyMistProduct": "Milky Mist High Protein Paneer",
      "ingredients": [
        "100g Milky Mist Paneer, crumbled",
        "2 eggs",
        "2 slices whole wheat bread",
        "1/4 onion, diced",
        "Salt and pepper to taste"
      ],
      "steps": [
        "Heat pan and sauté diced onion until soft",
        "Add crumbled paneer and cook for 2 minutes",
        "Add beaten eggs and scramble together",
        "Season with salt and pepper",
        "Toast bread and top with paneer scramble"
      ],
      "protein": 28
    }
